<Window x:Class="ListaZakupow.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj Produkt" Height="300" Width="400" Background="#F2F2F2">
	<Grid>
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">

			<TextBox Name="txtProductName" Width="300" Margin="10" Text="Nazwa Produktu">
				<TextBox.Style>
					<Style TargetType="TextBox">
						<Setter Property="FontFamily" Value="Segoe UI" />
						<Setter Property="FontSize" Value="14" />
						<Setter Property="Padding" Value="12,10" />
						<Setter Property="Background" Value="#FFFFFF" />
						<Setter Property="BorderBrush" Value="#CCCCCC" />
						<Setter Property="BorderThickness" Value="1" />
						
						<Setter Property="VerticalContentAlignment" Value="Center" />
						<Setter Property="Foreground" Value="#424242" />
					</Style>
				</TextBox.Style>
			</TextBox>

			<TextBox Name="txtProductCategory" Width="300" Margin="10" Text="Kategoria">
				<TextBox.Style>
					<Style TargetType="TextBox">
						<Setter Property="FontFamily" Value="Segoe UI" />
						<Setter Property="FontSize" Value="14" />
						<Setter Property="Padding" Value="12,10" />
						<Setter Property="Background" Value="#FFFFFF" />
						<Setter Property="BorderBrush" Value="#CCCCCC" />
						<Setter Property="BorderThickness" Value="1" />
						
						<Setter Property="VerticalContentAlignment" Value="Center" />
						<Setter Property="Foreground" Value="#424242" />
					</Style>
				</TextBox.Style>
			</TextBox>

			<TextBox Name="txtProductPrice" Width="300" Margin="10" Text="Cena">
				<TextBox.Style>
					<Style TargetType="TextBox">
						<Setter Property="FontFamily" Value="Segoe UI" />
						<Setter Property="FontSize" Value="14" />
						<Setter Property="Padding" Value="12,10" />
						<Setter Property="Background" Value="#FFFFFF" />
						<Setter Property="BorderBrush" Value="#CCCCCC" />
						<Setter Property="BorderThickness" Value="1" />
						
						<Setter Property="VerticalContentAlignment" Value="Center" />
						<Setter Property="Foreground" Value="#424242" />
					</Style>
				</TextBox.Style>
			</TextBox>

			<Button Content="Dodaj Produkt" Width="300" Margin="10" Click="BtnAddProduct_Click">
				<Button.Style>
					<Style TargetType="Button">
						<Setter Property="FontFamily" Value="Segoe UI" />
						<Setter Property="FontSize" Value="16" />
						<Setter Property="Padding" Value="15,10" />
						<Setter Property="Background" Value="#4CAF50" />
						<Setter Property="Foreground" Value="White" />
						<Setter Property="BorderBrush" Value="#388E3C" />
						<Setter Property="BorderThickness" Value="1" />
						
						<Setter Property="Effect">
							<Setter.Value>
								<DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.2" />
							</Setter.Value>
						</Setter>
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#45A049" />
								<Setter Property="Cursor" Value="Hand" />
							</Trigger>
							<Trigger Property="IsPressed" Value="True">
								<Setter Property="Background" Value="#388E3C" />
							</Trigger>
						</Style.Triggers>
					</Style>
				</Button.Style>
			</Button>

		</StackPanel>
	</Grid>
</Window>